{
  "name": "npm-git-snapshot",
  "version": "0.1.0",
  "description": "Tiny tool for releasing npm snapshots and add git hash after snapshot.",
  "author": "Tibor Szalai <tibor.szalai.work@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tibszawo/npm-git-snapshot"
  },
  "scripts": {
    "test": "node ./bin/npm-git-snapshot",
    "test:relative": "node ./bin/npm-git-snapshot -r /..",
	"test:relative:short": "node ./bin/npm-git-snapshot -r /.. -s 8",
    "help": "node ./bin/npm-git-snapshot --help"
  },
  "bugs": {
    "url": "https://github.com/tibszawo/npm-git-snapshot/issues"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 2.12.0"
  },
  "main": "index.js",
  "bin": {
    "npm-git-snapshot": "./bin/npm-git-snapshot"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "git-commits": "^1.3.0",
    "line-reader": "^0.4.0"
  }
}
